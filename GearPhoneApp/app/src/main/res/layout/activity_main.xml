<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inin.gearphoneapp.app.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/logText"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Alert"
                android:id="@+id/btnFakeAlert"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Alert"
                android:id="@+id/btnClearAlert"
                android:layout_below="@+id/btnFakeAlert"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/btnFakeAlert" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Call"
                android:id="@+id/btnNewCall"
                android:layout_below="@+id/btnClearAlert"
                android:layout_alignEnd="@+id/btnClearAlert" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear Call"
                android:id="@+id/btnClearCall"
                android:layout_below="@+id/btnNewCall"
                android:layout_alignEnd="@+id/btnNewCall"
                android:longClickable="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/btnConnect"
                android:layout_below="@+id/btnClearCall"
                android:layout_alignEnd="@+id/btnClearAlert"
                android:layout_alignStart="@+id/btnNewCall"
                android:background="#ff25ff41" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_stationControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:id="@+id/button_RegisterStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:text="@string/button_RegisterStation"
            android:onClick="registerStation"
            android:src="@drawable/bullet_square_glass_grey"
            android:background="@drawable/bullet_square_glass_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/stationStateText"
            android:id="@+id/stationStateText"
            android:gravity="center_vertical"
            android:textAlignment="viewStart"
            android:layout_weight="1"/>
        <ImageView android:id="@+id/image_OnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_receiver"
            android:layout_gravity="right"
            android:layout_weight="0" />
    </LinearLayout>

</RelativeLayout>
