<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inin.gearphoneapp.app.MainActivity"
    android:id="@+id/drawer_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/layout_stationControls"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CIC Connected"
                android:id="@+id/txtCicConnection"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:width="400px"
                android:layout_gravity="left" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect"
                    android:id="@+id/btnConnect"

                    android:background="#ff25ff41"
                    android:layout_marginLeft="50dip"
                    android:width="100dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Watch Connected"
                android:id="@+id/txtWatchConnection"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/logText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dip"
                android:paddingBottom="20dip" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:id="@+id/btnClearAlert"
                    android:layout_below="@+id/btnFakeAlert"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/btnFakeAlert" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Alert"
                    android:id="@+id/btnFakeAlert"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Call"
                    android:id="@+id/btnNewCall"
                    android:layout_below="@+id/btnClearAlert"
                    android:layout_alignEnd="@+id/btnClearAlert" />



            </LinearLayout>

        </LinearLayout>




</android.support.v4.widget.DrawerLayout>
