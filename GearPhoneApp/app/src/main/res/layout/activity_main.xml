<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.inin.gearphoneapp.app.MainActivity">


    <TextView
        android:id="@+id/logText"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Alert"
        android:id="@+id/btnFakeAlert"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Alert"
        android:id="@+id/btnClearAlert"
        android:layout_below="@+id/btnFakeAlert"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnFakeAlert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Call"
        android:id="@+id/btnNewCall"
        android:layout_below="@+id/btnClearAlert"
        android:layout_alignEnd="@+id/btnClearAlert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Call"
        android:id="@+id/btnClearCall"
        android:layout_below="@+id/btnNewCall"
        android:layout_alignEnd="@+id/btnNewCall"
        android:longClickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/btnConnect"
        android:layout_below="@+id/btnClearCall"
        android:layout_alignEnd="@+id/btnClearAlert"
        android:layout_alignStart="@+id/btnNewCall"
        android:background="#ff25ff41" />

</RelativeLayout>
